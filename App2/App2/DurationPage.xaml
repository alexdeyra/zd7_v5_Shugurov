<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.DurationPage"
             Title="Выбор срока исполнения">
    <StackLayout Padding="10">
        <Label Text="Выбор срока исполнения в днях"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label x:Name="WorkTypeLabel" />
        <Label x:Name="CarBrandLabel" />
        <Label x:Name="RepairContentLabel" />

        <Entry x:Name="DurationEntry" Placeholder="Введите срок (1-30 дней)" Keyboard="Numeric" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="10">
            <Button Text="Расчет стоимости" Clicked="OnCalculateCostClicked" />
            <Button Text="На главную" Clicked="OnBackToMainPageClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>